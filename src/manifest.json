{
    "manifest_version": 2,

    "name": "StemJS developer tool",
    "description": "Chrome Developer extension for StemJS framework.",
    "version": "1.0.3",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": [
            "https://*/*",
            "http://*/*"
        ],
        "js": ["injector.js"],
        "run_at": "document_start"
    }],
    "externally_connectable": {
        "matches": [
            "http://localhost:*/*",
            "https://localhost:*/*",
            "http://csacademy.com/*",
            "https://csacademy.com/*",
            "http://stemjs.com/*",
            "https://stemjs.com/*"
        ]
    },
    "web_accessible_resources": [
        "page.js",
        "page.css"
    ]
}
